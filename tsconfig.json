{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "lib": ["es2021"],
    "jsx": "react",
    "module": "es2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,

    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "types": ["@cloudflare/workers-types", "@types/jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules/**", "dist/"]
}
